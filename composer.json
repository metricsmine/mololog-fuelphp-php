{
    "name": "metricsmine/monolog-fuelphp-php",
    "description": "metricsmine integration for monolog. An abstract handler that sends messages to metricsmine",
    "keywords": ["metricsmine", "monolog", "logging", "error"],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "metricsmine",
            "homepage": "https://github.com/metricsmine/monolog-fuelphp-php"
        }
    ],

    "require" : {
        "php": "^5.6 | ^7.0",
        "monolog/monolog": "^1.7.0",
        "metricsmine/client-php": "^1."
    },

    "require-dev": {
        "phpunit/phpunit": "^5.2",
        "squizlabs/php_codesniffer": "^1.5.0",
        "satooshi/php-coveralls"  : "~0.6"
    },

    "autoload": {
        "psr-4": {
            "MeadSteve\\MonoSnag\\": "src/"
        }
    }
}
